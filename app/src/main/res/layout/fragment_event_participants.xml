<?xml version="1.0" encoding="utf-8"?>
<!-- veit ekki hvort þetta ætti að vera i navigation foldernum eða einhverstaðar annarstaðar -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_participant_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Participant Profile Picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tv_participant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintBottom_toBottomOf="@id/iv_participant_picture"
        app:layout_constraintEnd_toStartOf="@id/tv_participant_status"
        app:layout_constraintStart_toEndOf="@id/iv_participant_picture"
        app:layout_constraintTop_toTopOf="@id/iv_participant_picture"
        tools:text="test Name" />

    <TextView
        android:id="@+id/tv_participant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        app:layout_constraintBottom_toBottomOf="@id/iv_participant_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_participant_picture"
        tools:text="Invited" />

</androidx.constraintlayout.widget.ConstraintLayout>
